{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "composite": false,
      "module": "ESNext",
      "target": "ES2022",
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": false,
      "noEmit": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "test/**/*"
    ]
  }